# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_SECURE_COOKIE=true

# Database Configuration (PostgreSQL recommended for production)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=your-postgres-host
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=your-db-user
DB_POSTGRESDB_PASSWORD=your-db-password
DB_POSTGRESDB_SCHEMA=public

# Alternative: SQLite (for development/testing only)
# DB_TYPE=sqlite
# DB_SQLITE_DATABASE=/home/node/.n8n/database.sqlite

# Security
N8N_ENCRYPTION_KEY=your-encryption-key-here-32-chars-min
N8N_USER_MANAGEMENT_JWT_SECRET=your-jwt-secret-here

# Authentication (optional)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-password

# Email Configuration (optional)
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=your-email@gmail.com
N8N_SMTP_PASS=your-app-password
N8N_SMTP_SENDER=your-email@gmail.com

# Webhook and Editor URLs
WEBHOOK_URL=https://your-railway-domain.railway.app
N8N_EDITOR_BASE_URL=https://your-railway-domain.railway.app

# Execution Settings
EXECUTIONS_PROCESS=main
EXECUTIONS_MODE=regular
EXECUTIONS_TIMEOUT=3600
EXECUTIONS_TIMEOUT_MAX=7200

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console
N8N_METRICS=true

# File Storage (optional - for file uploads)
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_BINARY_DATA_TTL=24

# Redis Configuration (optional - for scaling)
QUEUE_BULL_REDIS_HOST=
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_DB=0
QUEUE_BULL_REDIS_PASSWORD=

# Timezone
GENERIC_TIMEZONE=UTC
TZ=UTC

# Node Environment
NODE_ENV=production
